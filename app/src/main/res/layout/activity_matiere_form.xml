<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.matieres.MatiereFormActivity">

    <TextView
        android:id="@+id/mf_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/matiere_form_txt"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/mf_intitule_ctrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:width="@dimen/edittextsize_form"
        android:hint="Intitulé"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.751"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mf_title_tv" />

    <EditText
        android:id="@+id/mf_description_ctrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textview_margintop_form"
        android:width="@dimen/edittextsize_form"
        android:hint="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.751"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mf_intitule_ctrl" />

    <EditText
        android:id="@+id/mf_professeur_ctrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textview_margintop_form"
        android:width="@dimen/edittextsize_form"
        android:hint="Professeur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.751"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mf_description_ctrl" />

    <Button
        android:id="@+id/mf_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:width="@dimen/buttonsize_form"
        android:backgroundTint="@color/cnam"
        android:text="@string/valider_txt"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/mf_back_to_list_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mf_professeur_ctrl" />

    <Button
        android:id="@+id/mf_back_to_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="44dp"
        android:width="@dimen/buttonsize_form"
        android:backgroundTint="@color/cnam"
        android:text="Retour"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mf_professeur_ctrl" />

    <TextView
        android:id="@+id/mf_intitule_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textview_margin_form"
        android:layout_marginTop="81dp"
        android:layout_marginRight="@dimen/textview_margin_form"
        android:text="Intitulé :"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/mf_intitule_ctrl"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mf_title_tv" />

    <TextView
        android:id="@+id/mf_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textview_margin_form"
        android:layout_marginTop="64dp"
        android:layout_marginRight="@dimen/textview_margin_form"
        android:text="Description :"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/mf_description_ctrl"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mf_intitule_tv" />

    <TextView
        android:id="@+id/mf_professeur_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textview_margin_form"
        android:layout_marginTop="67dp"
        android:layout_marginRight="@dimen/textview_margin_form"
        android:layout_marginBottom="376dp"
        android:text="Professeur :"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mf_professeur_ctrl"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mf_description_tv"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>